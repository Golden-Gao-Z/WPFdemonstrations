<Window x:Class="DockPanelTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanelTest"
        mc:Ignorable="d"
        MouseDoubleClick="Window_MouseDoubleClick"
        Title="MainWindow" Height="450" Width="800">
    <!--default:LastChildFill="True"-->
    <DockPanel x:Name="dockpanel" >
        <!--default button: fill dockpanel. set height and width, control will be set centor, center horizontal and center veritical.-->
        <Button Height="111" Width="111" Content="222" x:Name="btn1"/>
        <Button Height="111" Width="111"  x:Name="btn2"/>
        <Button Height="111" Width="111"  x:Name="btn3"/>
    </DockPanel>
</Window>
